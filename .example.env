# GeoScrAI / PyScrAI Universalis Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider (OpenRouter)
# =============================================================================
OPENROUTER_API_KEY=your_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
MODEL_NAME=xiaomi/mimo-v2-flash:free
LLM_TEMPERATURE=0.7
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Database Paths (optional - defaults to local files)
# =============================================================================
# DUCKDB_PATH=./database/geoscrai.duckdb
# LANCEDB_PATH=./database/lancedb
# LANCEDB_TABLE=memories
# LANCEDB_EMBEDDING_DIM=384

# =============================================================================
# Simulation Settings
# =============================================================================
SIMULATION_ID=Alpha_Scenario
TICK_INTERVAL_MS=1000
AUTO_RUN=false
PERCEPTION_RADIUS=0.1  # In degrees (~11km)

# =============================================================================
# UI Settings
# =============================================================================
HOST=0.0.0.0
PORT=8080
UI_TITLE=GeoScrAI Universalis
UI_DARK_MODE=true
UI_RELOAD=false

# =============================================================================
# Observability (optional)
# =============================================================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=http://localhost:3000
LANGFUSE_ENABLED=false
