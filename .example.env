# Example Environment Configuration

# LLM Provider Configuration
## OpenRouter
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=xiaomi/mimo-v2-flash:free
OPENROUTER_API_KEY=

## LM Proxy
LM_PROXY_BASE_URL=http://localhost:4000/openai/v1
LM_PROXY_MODEL=vscode-lm-proxy
LM_PROXY_API_KEY=not-needed

## LM Studio
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=lmstudio-community/Phi-3-4k-mini
LM_STUDIO_API_KEY=lm-studio

## Langfuse
LANGFUSE_SECRET_KEY = ""
LANGFUSE_PUBLIC_KEY = ""
LANGFUSE_BASE_URL = "http://localhost:3000"

## MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=universalis_mongodb

## ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=pyscrai_memories
CHROMA_USE_HTTP=true
CHROMA_PERSIST_DIR=database/chroma-data  # Uncomment to use persistent client instead of HTTP